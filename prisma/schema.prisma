// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  photoBooks PhotoBook[]
}

model PhotoBook {
  id        Int     @id @default(autoincrement())
  title     String
  status    String  @default("draft") // draft, reviewing, approved
  createdAt DateTime @default(now())
  userId    Int
  user      User    @relation(fields: [userId], references: [id])
  photos    Photo[]
  pdfUrl    String? // Link to generated PDF for review
}

model Photo {
  id          Int     @id @default(autoincrement())
  url         String
  description String
  photoBookId Int
  photoBook   PhotoBook @relation(fields: [photoBookId], references: [id])
  createdAt   DateTime @default(now())
}